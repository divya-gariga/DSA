class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int low = 0, high = matrix.length - 1, cols = matrix[0].length;
        while (low <= high) {
            int midRow = (low + high) / 2;

            if (target >= matrix[midRow][0] && target <= matrix[midRow][cols - 1])
                return binarySearch(matrix[midRow], target);
            else if (target < matrix[midRow][0])
                high = midRow - 1;
            else
                low = midRow + 1;
        }
        return false;
    }

    public boolean binarySearch(int arr[], int x) {
        int low = 0, high = arr.length - 1;
        while (low <= high) {
            int midRow = (low + high) / 2;

            if (arr[midRow] == x)
                return true;

            if (arr[midRow] < x)
                low = midRow + 1;

            else
                high = midRow - 1;
        }

        return false;
    }
}
